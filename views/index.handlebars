<body>

    <div class="text-center">

        <h1>Registration Numbers</h1>

        <div class="row d-flex justify-content-center">
            <div class="col-md-6 form-group w-25">
            <input type="text" name="number" class="inputReg" onfocus="this.value=''" placeholder="e.g. CA 123 456 / CA 123-456">
        </div>
        </div>
        
        <div>
            <p class="message"></p>
        </div>

        <div class="">
            <label>
                <input class="radio radio-danger" name="radioBtns" type="radio" value="CA">
                Cape Town
            </label>
            <label>
                <input class="radio radio-danger" name="radioBtns" type="radio" value="CY">
                Bellville
            </label>
            <label>
                <input class="radio radio-danger" name="radioBtns" type="radio" value="CK">
                Malmesbury
            </label>
            <label>
                <input class="radio radio-danger" name="radioBtns" type="radio" value="">
                All
            </label>
        </div>

        <div>
            <button class="addBtn">Add</button>
            <button class="filterBtn">Show</button>
            <button class="resetBtn">Reset</button>
        </div>

        <div class="displayOutputField">

        </div>
    </div>

